# cd does cd, then ls
function cd() {
    new_directory="$*";
    if [ $# -eq 0 ]; then
        new_directory=${HOME};
    fi;
    builtin cd "${new_directory}" && ls
}

# logbook function for recording sealed memos
function lb() {
    mkdir -p ~/logbook &&
    log_filename=$(date '+%Y-%m-%dT%H:%M:%S%z') &&
    vim ~/logbook/$log_filename;

    if [[ -a $log_filename ]]; then
        chmod -w ~/logbook/$log_filename
    fi
}

